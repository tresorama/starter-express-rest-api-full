// Base of the Configuration cames from: https://www.npmjs.com/package/@tsconfig/node14
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/backend/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/backend/types",
    ],
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
}